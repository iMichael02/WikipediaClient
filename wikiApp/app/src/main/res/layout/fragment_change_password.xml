<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordFragment"
    android:background="@color/colorPrimary"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change password"
            android:textColor="@color/textColor"
            android:textSize="16dp"
            android:textStyle="bold"
            >
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="12dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                >
                <TextView
                    android:id="@+id/old_pass"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/oldpw"
                    android:textColor="@color/textColor"
                    >
                </TextView>
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/old_pass"
                    android:layout_centerVertical="true"
                    android:textColorHint="#C8C8C8"
                    android:textSize="14dp"
                    android:padding ="12dp"
                    android:background="@color/newEditText"
                    android:hint="@string/pwEdit"
                    android:id="@+id/oldPwEditText"
                    android:textColor="@color/textColor"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    tools:ignore="TouchTargetSizeCheck"
                    >
                </EditText>
                <ImageView
                    android:id="@+id/show_pass_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_alignRight="@+id/oldPwEditText"
                    android:src="@drawable/ic_showpw" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                >
                <TextView
                    android:id="@+id/new_pass"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/newPw"
                    android:textColor="@color/textColor"
                    >
                </TextView>
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/new_pass"
                    android:textColorHint="#C8C8C8"
                    android:textSize="14dp"
                    android:padding ="12dp"
                    android:background="@color/newEditText"
                    android:hint="@string/pwNewEdit"
                    android:id="@+id/newPwEditText"
                    android:textColor="@color/textColor"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    tools:ignore="TouchTargetSizeCheck"
                    >
                </EditText>
                <ImageView
                    android:id="@+id/show_pass_btn2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_alignRight="@+id/newPwEditText"
                    android:src="@drawable/ic_showpw" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/new_pass2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/cfNewPw"
                    android:textColor="@color/textColor"
                    >
                </TextView>

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/new_pass2"
                    android:layout_centerVertical="true"
                    android:hint="@string/cfNewPw"
                    android:textColorHint="#C8C8C8"
                    android:background="@color/newEditText"
                    android:padding ="12dp"
                    android:textSize="14dp"
                    android:id="@+id/cfNewPwEditText"
                    android:textColor="@color/textColor"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    tools:ignore="TouchTargetSizeCheck"
                    ></EditText>
                <ImageView
                    android:id="@+id/show_pass_btn3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_alignRight="@+id/cfNewPwEditText"
                    android:src="@drawable/ic_showpw" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Apply"
            android:id="@+id/changePwButton"
            android:background="@color/layoutMain"
            android:textColor="@color/textColor"
            >

        </Button>
    </RelativeLayout>

</FrameLayout>