            <!--                                    android:theme="@style/SCBSwitch"-->
            <!--                                    android:id="@+id/SwitchCompat"-->
            <!--                                    >-->
            <!--                                </androidx.appcompat.widget.SwitchCompat>-->
            <!--                </LinearLayout>-->
            <!--                <View style = "@style/Divider"></View>-->

            <!--            </LinearLayout>-->



        </LinearLayout>


    </com.google.android.material.navigation.NavigationView>
