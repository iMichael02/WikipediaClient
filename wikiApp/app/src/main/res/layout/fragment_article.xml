            <!--                        android:layout_height="wrap_content"-->
            <!--                        android:text="Switch reading mode"-->
            <!--                        android:textColor="@color/textColor"-->
            <!--                        android:textSize="16dp"-->
            <!--                        android:layout_gravity="center_vertical"-->
            <!--                        android:layout_marginRight="8dp"-->
            <!--                        >-->

            <!--                    </TextView>-->
